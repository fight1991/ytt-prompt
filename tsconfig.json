{
  "compilerOptions": {

    "declaration": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "paths": {
      "@core": ["./src/core/index.ts"]
    },
  },

  "include": ["./src", "./dist/es/ytt/**/*"],
  "exclude": ["./node_modules/**/*", "./src/lib/*"],
  "plugins": [
    {
      "name": "typescript-snapshots-plugin",
      "snapshotCallIdentifiers": [
        "toMatchSnapshot",
        "toThrowErrorMatchingSnapshot",
        "toMatchDiffSnapshot"
      ]
    }
  ]
}
